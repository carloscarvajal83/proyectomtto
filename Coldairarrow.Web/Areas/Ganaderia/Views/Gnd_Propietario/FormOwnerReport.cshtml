
@using Coldairarrow.Entity.Ganaderia;
@using Coldairarrow.Util;

@{ Layout = "~/Views/Shared/_Layout_Form.cshtml";

    var obj = (Gnd_Propietario)Model;
    var objStr = Html.Raw(obj.ToJson());
}
<div style="padding:15px;padding-right:45px;">
    <form id="form" class="form-horizontal" role="form">
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label">Propietario</label>
            <div class="col-sm-5">
                <select id="ownerList" class="selectpicker form-control" name="ownerList" data-style="btn-default btn-sm" required title="Select one"></select>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group">
            <button id="submit" type="submit" class="hidden">提交</button>
        </div>
    </form>
</div>
<script>
    var theEntity = @objStr;

    $(function () {
        initEvent();
    });

    function initOwnerList() {
        $('#ownerList').selectpicker({
            url: '/Ganaderia/Gnd_Propietario/GetDataList_NoPagin',
            value: 0,
            valueField: 'Id',
            textField: 'Descripcion',
            pleaseSelect: false
        });
    }

    //事件绑定
    function initEvent() {
        //表单校验
        initOwnerList();
        $('#form').validator().on('submit', function (e) {
            //校验成功
            if (!e.isDefaultPrevented()) {
                e.preventDefault();
                var values = $('#form').getValues();
                $.extend(theEntity, values);
                theEntity["Id"] = $('#ownerList').val();
                loading();
                $.postJSON('/Ganaderia/Gnd_vInventario/VerReporte', theEntity, function (resJson) {
                    loading(false);
                    if (resJson.success) {
                        parent.$('#dataTable').bootstrapTable('refresh');
                        parent.dialogSuccess();
                        dialogClose();
                    }
                    else {
                        dialogError(resJson.Msg);
                    }
                });
            }
        })
    }

    //提交表单
    function submitForm() {
        $('#submit').trigger('click');
    }
</script>
